<Window x:Class="BatchProcessor.ModeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Batch Processor - Select Mode" Height="850" Width="950"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        MinHeight="750" MinWidth="850"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <StackPanel>
                <TextBlock Text="ðŸŽ¯ AutoCAD Batch Processor" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          HorizontalAlignment="Center"/>
                <TextBlock Text="Select the mode you want to use" 
                          FontSize="12" 
                          Foreground="#ECF0F1" 
                          HorizontalAlignment="Center" 
                          Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Mode Selection Cards - Compact Grid Layout -->
        <Grid Grid.Row="1" Margin="25,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Commands Execution Mode -->
            <Border Grid.Row="0"
                   Background="White" 
                   CornerRadius="8" 
                   Padding="15"
                   Cursor="Hand"
                   MouseLeftButtonDown="Border_CommandsMode_Click"
                   BorderThickness="2"
                   BorderBrush="#3498DB"
                   Margin="0,0,0,10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#2980B9"/>
                                <Setter Property="Background" Value="#EBF5FB"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon -->
                    <TextBlock Grid.Column="0"
                              Text="âš™ï¸" 
                              FontSize="36" 
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    
                    <!-- Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="Commands Execution" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,8"
                                  Foreground="#2C3E50"/>
                        <TextBlock TextWrapping="Wrap" 
                                  Foreground="#7F8C8D"
                                  FontSize="12"
                                  LineHeight="18">
                            <Run Text="Process AutoCAD drawings in batch mode. Execute commands on multiple DWG files and generate JSON output files."/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Button -->
                    <Button Grid.Column="2"
                           x:Name="BtnCommandsMode" 
                           Content="Select" 
                           Margin="15,0,0,0"
                           Padding="25,12"
                           VerticalAlignment="Center"
                           Background="#3498DB"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Click="BtnCommandsMode_Click"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980B9"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- JSON Diff Comparison Mode -->
            <Border Grid.Row="1"
                   Background="White" 
                   CornerRadius="8" 
                   Padding="15"
                   Cursor="Hand"
                   MouseLeftButtonDown="Border_DiffMode_Click"
                   BorderThickness="2"
                   BorderBrush="#27AE60"
                   Margin="0,0,0,10">
                <Border.Style>
                    <Style TargetType="Border">
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="#229954"/>
                                <Setter Property="Background" Value="#EAFAF1"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Icon -->
                    <TextBlock Grid.Column="0"
                              Text="ðŸ”" 
                              FontSize="36" 
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    
                    <!-- Content -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <TextBlock Text="JSON Diff Comparison" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,8"
                                  Foreground="#2C3E50"/>
                        <TextBlock TextWrapping="Wrap" 
                                  Foreground="#7F8C8D"
                                  FontSize="12"
                                  LineHeight="18">
                            <Run Text="Compare JSON files between two folders. Find differences between reference and latest JSON output files."/>
                        </TextBlock>
                    </StackPanel>
                    
                    <!-- Button -->
                    <Button Grid.Column="2"
                           x:Name="BtnDiffMode" 
                           Content="Select" 
                           Margin="15,0,0,0"
                           Padding="25,12"
                           VerticalAlignment="Center"
                           Background="#27AE60"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="Bold"
                           BorderThickness="0"
                           Click="BtnDiffMode_Click"
                           Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#229954"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Border>

            <!-- Create Relations Mode -->
            <Border Grid.Row="2"
                   Background="White" 
                   CornerRadius="8" 
                   Padding="15"
                   Cursor="Hand"
                   MouseLeftButtonDown="Border_RelationsMode_Click"
                   BorderThickness="2"
                   BorderBrush="#E67E22">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#D35400"/>
                                    <Setter Property="Background" Value="#FEF5E7"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Icon -->
                        <TextBlock Grid.Column="0"
                                  Text="ðŸ”—" 
                                  FontSize="36" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,15,0"/>
                        
                        <!-- Content -->
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="Create Relations" 
                                      FontSize="18" 
                                      FontWeight="Bold" 
                                      Margin="0,0,0,8"
                                      Foreground="#2C3E50"/>
                            <TextBlock TextWrapping="Wrap" 
                                      Foreground="#7F8C8D"
                                      FontSize="12"
                                      LineHeight="18">
                                <Run Text="Process drawings using AutoCAD GUI. Load UIPlugin DLL and run CREATE_RELATIONS_FOR_ENTITIES command."/>
                            </TextBlock>
                        </StackPanel>
                        
                        <!-- Button -->
                        <Button Grid.Column="2"
                               x:Name="BtnRelationsMode" 
                               Content="Select" 
                               Margin="15,0,0,0"
                               Padding="25,12"
                               VerticalAlignment="Center"
                               Background="#E67E22"
                               Foreground="White"
                               FontSize="14"
                               FontWeight="Bold"
                               BorderThickness="0"
                               Click="BtnRelationsMode_Click"
                               Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#D35400"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#ECF0F1" Padding="12">
            <TextBlock Text="ðŸ’¡ Tip: You can switch modes anytime from the menu" 
                      TextWrapping="Wrap" 
                      Foreground="#7F8C8D" 
                      FontSize="10" 
                      HorizontalAlignment="Center"/>
        </Border>
    </Grid>
</Window>

